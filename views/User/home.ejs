<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="/css/media.css">
  <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
  <title>Document</title>

<style>

    
  </style>
</head>

<body>
  <!-- navbar -->
  <header class="main-header">
    <nav class="main-nav">
        <div class="nav-items-left">
            <a href="#" class="logoname">
                <p>Spectre</p></a>
            
              <ul class="nav-list">
                <li> <a href="/home" class="nav-link">| &nbsp; Home</a></li>
                <li> <a href="/movies" class="nav-link"> | &nbsp; Movies</a></li>
              </ul>
        </div>
        
        <div class="nav-items-right">
            <a href="/cart" class="icons"><img src="/./assets/Vector.png" alt=""></a>
            <a href="/favourite" class="icons"><img src="/./assets/Vector (1).png" alt=""></a>
            <form action="/logout" method="POST">
              <button class="remove" href="/logout" class="icons"><img src="/./assets/Vector (2).png" alt="" ></button>
          </form>
        </div>
    </nav>
</header>

  <!-- container -->
  <div class="hero container">
    <div class="hero-content">
      <div class="hero-description">
        <h1 >Welcome</h1>
        <p>
          Millions of movies, TV shows and people to discover. Explore now.
        <p>
        <form class="form-control" action="/search" method="POST">
          <input type="text" name="search" placeholder="Search for a movie ">
          <button type="submit"><i class='bx bx-search'></i></button>
        </form>
      </div>
    </div>
  </div>


    <div class="row">
      <div class="title secondary-title"><span><img src="./assets/Rectangle 8.png" alt=""></span>Latest Release</div>
      <div class="cardcontainer">
        <% movies.forEach(movie => {  %>
          <div class="cards">
              <form action="/addtofavourite/<%= movie._id %>" method="POST">
                  <div class="card">
                    <div class="box">
                      <button type="submit"><img src="/./assets/bx_bxs-bookmark-plus.png" alt=""></button>
                    </div>
                      <a href="/movie/<%= movie._id %>"><img src="./uploads/<%= movie.image %>" width="200" class="card-poster"></a>
                      <div class="container">
                        <a class="movie-name" href=""><%= movie.name %></a>
                        <p class="sub-title"><%= movie.year %> | <%= movie.country %> | <%= movie.genre %></p>
                      </div>
                  </div>
                </form>
          </div>
          <% }) %> 
      </div>
  </div>



  <!-- footer -->
  <footer>
    <div class="footer">
      <div class="line-horizontal"></div>
      <a href="#" class="logo">
        <p>Spectre</p>
      </a>
      <div class="socialmedia">
        <a href="#" title="On Twitter"><i class='bx bxl-twitter'></i></a>
        <a href="#" title="On Instagram"><i class='bx bxl-instagram'></i></a>
        <a href="#" title="On Facebook"><i class='bx bxl-facebook-square'></i></i></a>
        <a href="#" title="On YouTube"><i class='bx bxl-youtube'></i></a>
      </div>
    </div>
  </footer>
</body>

</html>